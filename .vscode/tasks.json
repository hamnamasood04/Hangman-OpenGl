{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Hangman with FreeGLUT (ucrt64)",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/gcc.exe",
            "args": [
                "main.c",
                "-o", "hangman.exe",
                "-IC:/msys64/ucrt64/include",
                "-LC:/msys64/ucrt64/lib",
                "-lfreeglut",
                "-lopengl32",
                "-lglu32",
                "-lm",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
